script/source = "extends CharacterBody2D
class_name Player

@onready var resource: Resource
@onready var health_component: Node2D = $HealthComponent

@export var speed = 200


func get_input():
	var input_direction = Input.get_vector(\"move_left\", \"move_right\", \"move_up\", \"move_down\")
	velocity = input_direction * speed

func _physics_process(_delta):
	get_input()
	move_and_slide()
var damage_sources = {}  # Dictionary to track recent damage sources
var grace_period: float = 0.5  # Time before the same source can damage again





var active_areas: Dictionary = {}

func _on_hurt_box_area_entered(area: Area2D) -> void:
	health_component.take_damage(area.damage)
	if area not in active_areas:
		active_areas[area] = true

func _on_hurt_box_area_exited(area: Area2D) -> void:
	if area in active_areas:
		active_areas.erase(area)
"

