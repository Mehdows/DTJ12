script/source = "extends CharacterBody2D

@onready var resource: Resource
@onready var health_component: Node2D = $HealthComponent

@export var speed = 200



func get_input():
	var input_direction = Input.get_vector(\"move_left\", \"move_right\", \"move_up\", \"move_down\")
	velocity = input_direction * speed

func _physics_process(_delta):
	get_input()
	move_and_slide()
var damage_sources = {}  # Dictionary to track recent damage sources
var grace_period: float = 0.5  # Time before the same source can damage again

func _on_hurt_box_area_entered(area: Area2D) -> void:
	print(area)
	print(\"hello\")
	var source_id = area.get_instance_id()  # Unique ID for the damage source
	
	if source_id in damage_sources:
		return  # Ignore if within grace period
	
	health_component.take_damage(area.damage)
	damage_sources[source_id] = true
	
	# Set up a one-shot timer to remove the source from the dictionary
	var timer = Timer.new()
	timer.wait_time = grace_period
	timer.one_shot = true
	timer.connect(\"timeout\", Callable(self, \"_remove_damage_source\").bind(source_id))
	add_child(timer)
	timer.start()
	
func _remove_damage_source(source_id):
	damage_sources.erase(source_id)
"

